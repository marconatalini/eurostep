<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Server_response"
        android:text="@string/risposta_del_server"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ordini_in_corso"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/btn_ordini_cnc"
            android:background="@color/blu_logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="50dp">

        <ToggleButton
            android:id="@+id/btn_cnc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mybtn_lavorazione"
            android:checked="false"
            android:onClick="btn_click"
            android:textOff="@string/inizio_cnc"
            android:textOn="" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/btn_pulizia"
            android:onClick="btn_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:textOff="@string/inizio_pulizia"
            android:textOn="@string/fine_pulizia"
            />
    </LinearLayout>

</LinearLayout>
